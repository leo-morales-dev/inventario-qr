<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('partials/head') %>
</head>

<body class="g-sidenav-show bg-gray-100">
  
  <div class="min-height-300 position-absolute w-100 top-0"
       style="background-image: url('/assets/img/inventory-cover.jpg'); background-size: cover; background-position: center center;">
      <span class="mask bg-gradient-danger opacity-6"></span>
  </div>

  <%- include('partials/sidebar', { page: 'damages' }) %>

  <main class="main-content position-relative border-radius-lg ">
    <%- include('partials/navbar', { page: 'Mermas y Daños' }) %>

    <div class="container-fluid py-4">
      
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            
            <div class="card-header pb-0 d-flex justify-content-between align-items-center">
              <h6>Historial de Bajas y Mermas</h6>
              
              <div>
                  <a href="/inventory" class="btn btn-outline-secondary btn-sm mb-0 me-2">
                      <i class="fas fa-arrow-left me-1"></i> Volver al Inventario
                  </a>
                  
                  <a href="/inventory" class="btn btn-primary btn-sm mb-0">
                      <i class="fas fa-plus me-1"></i> Reportar Nuevo
                  </a>
              </div>
            </div>

            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Producto</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Razón / Motivo</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Cant.</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Fecha</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(history.length === 0) { %>
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted text-sm">
                                No hay registros de mermas aún.
                            </td>
                        </tr>
                    <% } %>

                    <% history.forEach(item => { %>
                      <tr>
                        <td>
                            <div class="d-flex px-2 py-1">
                                <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm">
                                        <%= item.Product ? item.Product.description : (item.backup_product || 'Item Eliminado') %>
                                    </h6>
                                    <p class="text-xs text-secondary mb-0">
                                        <%= item.Product ? item.Product.code : (item.backup_code || '--') %>
                                    </p>
                                </div>
                            </div>
                        </td>
                        <td>
                          <span class="text-xs font-weight-bold mb-0"><%= item.reason %></span>
                        </td>
                        <td class="align-middle text-center text-sm">
                          <span class="badge badge-sm bg-gradient-danger">-<%= item.quantity %></span>
                        </td>
                        <td class="align-middle text-center">
                          <span class="text-secondary text-xs font-weight-bold"><%= item.formattedDate %></span>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>

  <%- include('partials/scripts') %>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('alert') === 'reported') {
        Swal.fire({
            icon: 'success',
            title: 'Baja Confirmada',
            text: 'El stock se ha descontado correctamente.',
            confirmButtonColor: '#f5365c'
        });
        window.history.replaceState(null, null, window.location.pathname);
    }
  </script>

</body>
</html>