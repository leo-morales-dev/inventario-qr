                                            </select>
                                        </div>

                                        <hr>
                                        <div class="d-flex justify-content-between">
                                            <a href="/inventory" class="btn btn-secondary">Cancelar</a>
                                            <button type="submit" class="btn btn-success px-5">Guardar Cambios</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="sticky-footer bg-white"><div class="container my-auto"><div class="copyright text-center my-auto"><span>Copyright &copy; Tu App 2025</span></div></div></footer>
        </div>
    </div>
    <%- include('partials/scripts') %>
</body>
