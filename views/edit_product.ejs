<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('partials/head') %>
</head>

<body class="g-sidenav-show bg-gray-100">
  
  <div class="min-height-300 position-absolute w-100 top-0"
       style="background-image: url('/assets/img/inventory-cover.jpg'); background-size: cover; background-position: center center;">
      <span class="mask bg-gradient-primary opacity-6"></span>
  </div>

  <%- include('partials/sidebar', { page: 'inventory' }) %>

  <main class="main-content position-relative border-radius-lg ">
    
    <%- include('partials/navbar', { page: 'Editar Producto' }) %>

    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12 col-lg-10 mx-auto"> 
          <div class="card shadow-lg">
            <div class="card-header pb-0">
              <div class="d-flex align-items-center">
                <p class="mb-0 font-weight-bold">Modificar Informaci贸n</p>
                <a href="/inventory" class="btn btn-outline-secondary btn-sm ms-auto">
                    <i class="fas fa-arrow-left"></i> Regresar
                </a>
              </div>
            </div>
            
            <div class="card-body">
              <p class="text-uppercase text-sm text-muted">Detalles del Art铆culo</p>
              
              <form action="/inventory/update/<%= product.id %>" method="POST">
                
                <input type="hidden" name="product_id" value="<%= product.id %>">

                <div class="row">
                  
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="form-control-label">C贸digo QR / Barras (Principal)</label>
                      <div class="input-group">
                          <input class="form-control" type="text" name="code" value="<%= product.code %>">
                          <span class="input-group-text"><i class="fas fa-qrcode"></i></span>
                      </div>
                      <small class="form-text text-muted">Este es el c贸digo 煤nico que genera el QR.</small>
                    </div>
                  </div>

                  <div class="col-md-6">
                    
                    <div class="form-group">
                      <label class="form-control-label text-primary font-weight-bold">Clave Corta Principal</label>
                      <input class="form-control font-weight-bold" type="text" 
                             name="short_code" value="<%= product.short_code %>">
                    </div>

                    <% if (product.ExtraCodes && product.ExtraCodes.length > 0) { %>
                        
                        <% const clavesDiferentes = product.ExtraCodes.filter(e => e.codigo_proveedor !== product.short_code); %>
                        
                        <% if (clavesDiferentes.length > 0) { %>
                            <div class="card card-body border bg-gray-100 p-3 mb-3">
                                <label class="form-control-label text-xs text-muted mb-2">
                                    <i class="fas fa-tags"></i> Claves Adicionales (XML/Excel):
                                </label>
                                
                                <% product.ExtraCodes.forEach(extra => { %>
                                    
                                    <% if (extra.codigo_proveedor !== product.short_code) { %>
                                        
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="input-group input-group-sm w-100">
                                                
                                                <input type="hidden" name="extra_ids[]" value="<%= extra.id %>">
                                                
                                                <input type="text" name="extra_values[]" class="form-control" value="<%= extra.codigo_proveedor %>">
                                                
                                                <button class="btn btn-outline-danger mb-0" type="submit" 
                                                        formaction="/code/delete/<%= extra.id %>"
                                                        onclick="return confirm('驴Eliminar esta clave extra permanentemente?');"
                                                        title="Eliminar esta clave">
                                                    <i class="fas fa-trash"></i>
                                                </button>

                                            </div>
                                        </div>

                                    <% } %>
                                <% }) %>
                                <small class="text-xxs text-muted fst-italic">Edita los textos y presiona "Guardar Cambios Generales" abajo.</small>
                            </div>
                        <% } %>
                    <% } %>

                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Stock Actual</label>
                      <input class="form-control" type="number" name="stock" value="<%= product.stock %>" min="0">
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Tipo de Art铆culo</label>
                        <select name="category" class="form-control">
                          <option value="herramienta" <%= product.category === 'herramienta' ? 'selected' : '' %>> Herramienta (Se devuelve)</option>
                          <option value="consumible" <%= product.category === 'consumible' ? 'selected' : '' %>> Consumible (Se gasta)</option>
                        </select>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="form-control-label">Descripci贸n</label>
                      <input class="form-control" type="text" name="description" value="<%= product.description %>">
                    </div>
                  </div>

                </div>
                
                <hr class="horizontal dark my-4">
                
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn bg-gradient-success btn-lg">
                        <i class="fas fa-check-circle me-2"></i> Guardar Cambios Generales
                    </button>
                </div>

              </form> 
            </div>
          </div>

        </div>
      </div>
      
      <footer class="footer pt-3">
        <div class="container-fluid">
          <div class="row align-items-center justify-content-lg-between">
            <div class="col-lg-6 mb-lg-0 mb-4">
              <div class="copyright text-center text-sm text-muted text-lg-start">
                漏 <%= new Date().getFullYear() %> ATN Fabricaciones S.A. de C.V.
              </div>
            </div>
          </div>
        </div>
      </footer>

    </div>
  </main>

  <%- include('partials/scripts') %>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    const urlParams = new URLSearchParams(window.location.search);
    const alertMsg = urlParams.get('alert');

    if (alertMsg === 'updated') {
        Swal.fire({
            icon: 'success',
            title: '隆Guardado!',
            text: 'Toda la informaci贸n se actualiz贸 correctamente.',
            confirmButtonColor: '#5e72e4',
            timer: 2000
        });
    } else if (alertMsg === 'deleted') {
        Swal.fire({
            icon: 'success',
            title: 'Clave Eliminada',
            text: 'La clave adicional ha sido removida.',
            confirmButtonColor: '#f5365c',
            timer: 2000
        });
    }
    
    if (alertMsg) {
        window.history.replaceState(null, null, window.location.pathname);
    }
  </script>

</body>
</html>