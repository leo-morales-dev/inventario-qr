<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('partials/head') %>
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>

<body id="page-top">
    <div id="wrapper">
        <%- include('partials/sidebar', { page: 'employees' }) %>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3"><i class="fa fa-bars"></i></button>
                    <h1 class="h3 mb-0 text-gray-800">Directorio de Personal</h1>
                </nav>

                <div class="container-fluid">

                    <% 
                        let totalEmployees = employees.length;
                        let withDebt = employees.filter(e => e.loans && e.loans.some(l => l.status === 'prestado')).length;
                        let clean = totalEmployees - withDebt;
                    %>

                    <div class="row">
                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Plantilla</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= totalEmployees %></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-users fa-2x text-gray-300"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card border-left-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Con Herramienta (Deudores)</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= withDebt %></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-tools fa-2x text-gray-300"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Libres / Sin Adeudos</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= clean %></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-check-circle fa-2x text-gray-300"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-address-book mr-2"></i>Nómina Registrada</h6>
                            
                            <a href="#" class="btn btn-primary btn-icon-split btn-sm shadow-sm" data-toggle="modal" data-target="#addEmployeeModal">
                                <span class="icon text-white-50"><i class="fas fa-user-plus"></i></span>
                                <span class="text">Nuevo Empleado</span>
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Colaborador</th>
                                            <th class="text-center">Estado Actual</th>
                                            <th class="text-center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% employees.forEach(emp => { %>
                                            <tr>
                                                <td class="align-middle">
                                                    <div class="d-flex align-items-center">
                                                        <div class="rounded-circle bg-gradient-primary text-white d-flex align-items-center justify-content-center mr-3 shadow-sm" style="width: 40px; height: 40px; font-weight: bold; font-size: 1.2rem;">
                                                            <%= emp.name.charAt(0) %>
                                                        </div>
                                                        <div>
                                                            <div class="font-weight-bold text-dark"><%= emp.name %></div>
                                                            <div class="small text-muted">ID: <%= emp.id %></div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center align-middle">
                                                    <% const activeCount = emp.loans ? emp.loans.filter(l => l.status === 'prestado').length : 0; %>
                                                    
                                                    <% if (activeCount > 0) { %>
                                                        <span class="badge badge-danger px-3 py-2 shadow-sm" style="font-size: 0.9em;">
                                                            <i class="fas fa-exclamation-circle mr-1"></i>
                                                            Tiene <%= activeCount %> Herramientas
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge badge-success px-3 py-2 shadow-sm" style="font-size: 0.9em; opacity: 0.8;">
                                                            <i class="fas fa-check mr-1"></i> Libre
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td class="text-center align-middle">
                                                    <a href="/employees/<%= emp.id %>" class="btn btn-info btn-circle btn-sm shadow-sm" title="Ver Perfil y Gafete">
                                                        <i class="fas fa-id-card"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <footer class="sticky-footer bg-white"><div class="container my-auto"><div class="copyright text-center my-auto"><span>Copyright &copy; Tu App 2025</span></div></div></footer>
        </div>
    </div>

    <div class="modal fade" id="addEmployeeModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form action="/employees/add" method="POST">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title"><i class="fas fa-user-plus mr-2"></i>Registrar Colaborador</h5>
                        <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="font-weight-bold">Nombre Completo</label>
                            <input type="text" name="name" class="form-control" placeholder="Ej: JUAN PEREZ..." required style="text-transform: uppercase;" autofocus>
                            <small class="text-muted">Se guardará automáticamente en mayúsculas.</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                        <button class="btn btn-primary" type="submit">Guardar Registro</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>

    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                }
            });
        });
    </script>
</body>
</html>